{
  "name": "NetworkManager",
  "version": "0.9.0",
  "main": "./main.js",
  "author": {
    "name": "Rodrigo Felipe dos Santos Lima",
    "email": "rodrigo.suporte@contas.com"
  },
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "react": "^18.3.1",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.1",
    "react-icons": "^5.3.0",
    "react-router-dom": "^6.26.2",
    "react-scripts": "5.0.1",
    "react-spinner": "^0.2.7",
    "socket.io-client": "^4.8.0",
    "styled-components": "^6.1.13",
    "sweetalert": "^2.1.2",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "electron": "^32.1.0",
    "electron-builder": "^25.0.5"
  },
  "scripts": {
    "start": "concurrently \"cross-env BROWSER=none react-scripts start\" \"npm run server\" \"npm run wait-react\"",
    "wait-react": "node WaitReact.js && npm run electron",
    "build": "react-scripts build",
    "server": "cd .. && nodemon src/app.js",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-build": "electron-builder -w"
  },
  "build": {
    "appId": "com.ManageNetwork",
    "productName": "Network Manager",
    "mac": {
      "category": "Network-Manager.network"
    },
    "files": [
      "./main.js",
      "./node_modules/**/*"
    ],
    "extraMetadata": {
      "main": "./main.js"
    },
    "win": { 
        "target": "portable"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
